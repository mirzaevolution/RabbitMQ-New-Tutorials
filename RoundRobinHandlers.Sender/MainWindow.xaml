<Window x:Class="RoundRobinHandlers.Sender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoundRobinHandlers.Sender"
        mc:Ignorable="d"
        Title="MainWindow" Height="235" Width="431">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBox Name="TextBoxMessage" Padding="2" FontSize="18"
                 Margin="8" TextWrapping="Wrap"
                 BorderThickness="2"/>
        <Button Name="ButtonSendMessage" Grid.Row="1" Margin="8" Padding="5" Width="150"
                Click="OnSendMessageClicked">
            Send Message
        </Button>
    </Grid>
</Window>
